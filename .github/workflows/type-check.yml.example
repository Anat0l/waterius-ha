# Example GitHub Actions workflow for type checking
# Copy this file to .github/workflows/type-check.yml to enable

name: Type Check

on:
  push:
    branches: [ main, master, develop ]
    paths:
      - 'custom_components/wateruis_ha/**/*.py'
      - 'mypy.ini'
      - 'requirements.txt'
  pull_request:
    branches: [ main, master, develop ]
    paths:
      - 'custom_components/wateruis_ha/**/*.py'
      - 'mypy.ini'
      - 'requirements.txt'

jobs:
  mypy:
    name: Type Check with mypy
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'
          cache: 'pip'
      
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install mypy>=1.8.0
          pip install -r requirements.txt
      
      - name: Run mypy
        run: |
          mypy custom_components/wateruis_ha/ \
            --config-file mypy.ini \
            --show-error-codes \
            --show-column-numbers \
            --pretty
      
      - name: Type check summary
        if: success()
        run: |
          echo "✅ All type checks passed!"
          echo ""
          echo "Configuration:"
          echo "  - Strict mode: enabled"
          echo "  - Python version: 3.11"
          echo "  - mypy version: $(mypy --version)"
      
      - name: Type check failed
        if: failure()
        run: |
          echo "❌ Type check failed!"
          echo ""
          echo "Please fix the type errors and push again."
          echo "See STRICT_TYPING.md for guidelines."
          exit 1

  coverage:
    name: Type Coverage Report
    runs-on: ubuntu-latest
    needs: mypy
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'
      
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install mypy>=1.8.0
      
      - name: Generate coverage report
        run: |
          mypy custom_components/wateruis_ha/ \
            --config-file mypy.ini \
            --html-report ./mypy-report \
            --any-exprs-report ./mypy-report
      
      - name: Upload coverage report
        uses: actions/upload-artifact@v4
        with:
          name: mypy-coverage-report
          path: mypy-report/
          retention-days: 30


